{
    "env": {
        "es2020": true,
        "node": true
    },
    "extends": "standard-with-typescript",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "rules": {
        "@typescript-eslint/semi": ["error", "always"],
        "@typescript-eslint/quotes": ["error", "single"],
        "@typescript-eslint/indent": ["error", 4]
    }
}
